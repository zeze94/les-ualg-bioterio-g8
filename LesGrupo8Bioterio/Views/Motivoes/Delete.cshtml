@model LesGrupo8Bioterio.Motivo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="alert alert-danger">
    <ul>
        <li> Tem a certeza que pretende Eliminar este registo de amostragem?</li>
    </ul>
</h3>
<div class="table-bordered">
    <h4>Motivo</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TipoMotivo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TipoMotivo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NomeMotivo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeMotivo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdMotivo" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a type="button" class="btn btn-info pull-right" asp-action="Index">Cancelar</a>
    </form>
</div>
