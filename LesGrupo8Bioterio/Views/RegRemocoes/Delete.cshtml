@model LesGrupo8Bioterio.RegRemocoes
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Página Inicial</a></li>
        <li class="breadcrumb-item"><a asp-controller="RegRemocoes" asp-action="Index">Registo de Remoções</a></li>
        <li class="breadcrumb-item active" aria-current="page">Apagar Registo de Remoções</li>
    </ol>
</nav>
<<h3 class="alert alert-danger">
    <ul>
        <li> Tem a certeza que pretende Eliminar este registo de remoção?</li>
    </ul>
</h3>
<div>
    <h4>Registo de Remoções</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NroRemoções)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NroRemoções)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CausaMorte)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CausaMorte)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MotivoIdMotivoNavigation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MotivoIdMotivoNavigation.NomeMotivo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TanqueIdTanqueNavigation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TanqueIdTanqueNavigation.Sala)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRegRemo" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a type="button" class="btn btn-info pull-right" asp-action="Index">Cancelar</a>
    </form>
</div>
