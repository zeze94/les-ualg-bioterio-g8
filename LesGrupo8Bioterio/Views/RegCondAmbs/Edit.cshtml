@model LesGrupo8Bioterio.RegCondAmb
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Editar Registo Condição Ambiental</h2>

<div class="row table-bordered">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRegCondAmb" />
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input type="date" asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Temperatura" class="control-label"></label>
                <input asp-for="Temperatura" class="form-control" />
                <span asp-validation-for="Temperatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolAgua" class="control-label"></label>
                <input asp-for="VolAgua" class="form-control" />
                <span asp-validation-for="VolAgua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalinidadeAgua" class="control-label"></label>
                <input asp-for="SalinidadeAgua" class="form-control" />
                <span asp-validation-for="SalinidadeAgua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NivelO2" class="control-label"></label>
                <input asp-for="NivelO2" class="form-control" />
                <span asp-validation-for="NivelO2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CircuitoTanqueIdCircuito" class="control-label"></label>
                <select asp-for="CircuitoTanqueIdCircuito" class="form-control" asp-items="ViewBag.CircuitoTanqueIdCircuito"></select>
                <span asp-validation-for="CircuitoTanqueIdCircuito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-success" />
                <a type="button" class="btn btn-info" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
