@model IEnumerable<LesGrupo8Bioterio.Elementoequipa>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Página Inicial</a></li>
        <li class="breadcrumb-item"><a asp-controller="Projetoes" asp-action="Index">Projetos</a></li>
        <li class="breadcrumb-item active" aria-current="page">Elementos de Equipa</li>
    </ol>
</nav>

<h2>Equipas</h2>
<p>
    <a type="button" class="btn btn-info" asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Função)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjetoIdProjetoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.isarchived == 0)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Função)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjetoIdProjetoNavigation.Nome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdElementoEquipa"><span class="glyphicon glyphicon-pencil"></span></a> |
                        <a asp-action="Details" asp-route-id="@item.IdElementoEquipa"><span class="glyphicon glyphicon-eye-open"></span></a> |
                        <a asp-action="Delete" asp-route-id="@item.IdElementoEquipa"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="col-md-12">
    <a type="button" class="btn btn-info pull-right" asp-controller="Projetoes" asp-action="Index">Voltar Para Projetos</a>
</div>