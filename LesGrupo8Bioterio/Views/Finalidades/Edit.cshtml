@model LesGrupo8Bioterio.Finalidade
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Editar</h2>
<h4>Finalidade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFinalidade" />
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Finalidade" data-content="O que ira consistir o tratamento"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="TFinalidade" class="control-label"></label>
                <input asp-for="TFinalidade" class="form-control" />
                <span asp-validation-for="TFinalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-success" />
                <a type="button" class="btn btn-info" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover();
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
