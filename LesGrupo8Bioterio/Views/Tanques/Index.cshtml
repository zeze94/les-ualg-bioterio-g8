@model IEnumerable<LesGrupo8Bioterio.Tanque>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";//codidenttanque
}
<h2>Listagem de Tanques</h2>
<p>
    <a type="button" class="btn btn-info" asp-action="Create">Criar Tanque</a>
</p>
<div class="col-md-9">
    <ul class="nav nav-tabs" style="text-align: left;">
        <li class="active"><a href="#tanques" data-toggle="tab" id="first_tab"><b>Tanques em Curso</b></a></li>
        <li><a href="#arquivo" data-toggle="tab" id="second_tab"><b>Tanques arquivados</b></a></li>
    </ul>
</div>
<div class="col-md-10">
    <div class="tab-content">
        <div id="tanques" class="tab-pane fade in active">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.codidenttanque)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NroAnimais)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sala)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Observacoes)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CircuitoTanqueIdCircuitoNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LoteIdLoteNavigation)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.isarchived == 0)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.codidenttanque)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NroAnimais)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sala)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Observacoes)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CircuitoTanqueIdCircuitoNavigation.CodigoCircuito)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoteIdLoteNavigation.CodigoLote)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdTanque"><span class="glyphicon glyphicon-pencil"></span></a> |
                                    <a asp-action="Details" asp-route-id="@item.IdTanque"><span class="glyphicon glyphicon-eye-open"></span></a> |
                                    <a asp-action="Delete" asp-route-id="@item.IdTanque"><span class="glyphicon glyphicon-trash"></span></a>
                                </td>
                            </tr>

                        }
                    }
                </tbody>
            </table>
        </div>
        <div id="arquivo" class="tab-pane fade in">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.codidenttanque)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NroAnimais)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sala)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Observacoes)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CircuitoTanqueIdCircuitoNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LoteIdLoteNavigation)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.isarchived == 1)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.codidenttanque)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NroAnimais)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sala)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Observacoes)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CircuitoTanqueIdCircuitoNavigation.CodigoCircuito)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoteIdLoteNavigation.CodigoLote)
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.IdTanque"><span class="glyphicon glyphicon-eye-open"></span></a> 
                                </td>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-2">

    <ul class="list-group">
        <li class="list-group-item active"><b>Registos:</b></li>
        <li class="list-group-item"><a asp-area="" asp-controller="RegTratamentoes" asp-action="Index">Tratamentos</a></li>
        <li class="list-group-item"><a asp-area="" asp-controller="RegRemocoes" asp-action="Index">Remoções</a></li>
        <li class="list-group-item"><a asp-area="" asp-controller="RegManutencaos" asp-action="Index">Manutenções</a></li>
        <li class="list-group-item"><a asp-area="" asp-controller="RegAmostragens" asp-action="Index">Amostragens</a></li>
        <li class="list-group-item"><a asp-area="" asp-controller="RegAlimentars" asp-action="Index">Alimentares</a></li>
    </ul>
</div>
<div class="col-md-12">
    <a type="button" class="btn btn-info pull-right" asp-controller="CircuitoTanques" asp-action="Index">Voltar Para Circuitos</a>
</div>
