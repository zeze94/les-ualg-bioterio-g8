@model LesGrupo8Bioterio.Tanque

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Criar Tanque</h2>

<hr />
<div class="row table-bordered">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NroAnimais" class="control-label"></label>
                <input asp-for="NroAnimais" class="form-control" />
                <span asp-validation-for="NroAnimais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sala" class="control-label"></label>
                <input asp-for="Sala" class="form-control" />
                <span asp-validation-for="Sala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoteIdLote" class="control-label"></label>
                <select asp-for="LoteIdLote" class ="form-control" asp-items="ViewBag.LoteIdLote"></select>
            </div>
            <div class="form-group">
                <label asp-for="CircuitoTanqueIdCircuito" class="control-label"></label>
                <select asp-for="CircuitoTanqueIdCircuito" class ="form-control" asp-items="ViewBag.CircuitoTanqueIdCircuito"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a type="button" class="btn btn-info" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
