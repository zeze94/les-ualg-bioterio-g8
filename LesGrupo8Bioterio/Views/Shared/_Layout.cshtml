<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Bioterio</title>

        <environment include="Development">
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
            <link rel="stylesheet" href="~/css/site.css" />
        </environment>
    </head>
    <body>
        <div class="wrapper">
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                            <div class="logo"></div>
                        </a>
                    </div>
                    <div style="top: 30px;" class="nav navbar-nav align-middle">
                        <div class="dropdown col-sm-4">
                            <span type="button" data-toggle="dropdown">
                                Menu
                            </span>
                            <ul class="dropdown-menu">
                                <li><a asp-area="" asp-controller="AgenteTrats" asp-action="Index">AgenteTratamento</a></li>
                                <li><a asp-area="" asp-controller="CircuitoTanques" asp-action="Index">CircuitoTanques</a></li>
                                <li><a asp-area="" asp-controller="Elementoequipas" asp-action="Index">Elementoequipas</a></li>
                                <li><a asp-area="" asp-controller="Ensaios" asp-action="Index">Ensaios</a></li>
                                <li><a asp-area="" asp-controller="Finalidades" asp-action="Index">Finalidades</a></li>
                                <li><a asp-area="" asp-controller="Funcionarios" asp-action="Index">Funcionarios</a></li>
                                <li><a asp-area="" asp-controller="Motivoes" asp-action="Index">Motivos</a></li>
                                <li><a asp-area="" asp-controller="PlanoAlimentars" asp-action="Index">PlanoAlimentars</a></li>
                                <li><a asp-area="" asp-controller="Projetoes" asp-action="Index">Projetos</a></li>
                                <li><a asp-area="" asp-controller="RegCondAmbs" asp-action="Index">RegCondAmbs</a></li>
                                <li><a asp-area="" asp-controller="Tanques" asp-action="Index">Tanques</a></li>
                                <li><a asp-area="" asp-controller="TipoManuntecaos" asp-action="Index">TipoManuntecaos</a></li>
                            </ul>
                        </div>
                        <div class="dropdown col-sm-4">
                            <span type="button" data-toggle="dropdown">
                                Tanques
                            </span>
                            <ul class="dropdown-menu">
                                <li><a asp-area="" asp-controller="AgenteTrats" asp-action="Index">AgenteTratamento</a></li>
                                <li><a asp-area="" asp-controller="CircuitoTanques" asp-action="Index">CircuitoTanques</a></li>
                                <li><a asp-area="" asp-controller="Elementoequipas" asp-action="Index">Elementoequipas</a></li>
                                <li><a asp-area="" asp-controller="Ensaios" asp-action="Index">Ensaios</a></li>
                                <li><a asp-area="" asp-controller="Finalidades" asp-action="Index">Finalidades</a></li>
                                <li><a asp-area="" asp-controller="Funcionarios" asp-action="Index">Funcionarios</a></li>
                                <li><a asp-area="" asp-controller="Motivoes" asp-action="Index">Motivos</a></li>
                                <li><a asp-area="" asp-controller="Pla  noAlimentars" asp-action="Index">PlanoAlimentars</a></li>
                                <li><a asp-area="" asp-controller="Projetoes" asp-action="Index">Projetos</a></li>
                                <li><a asp-area="" asp-controller="Tanques" asp-action="Index">Tanques</a></li>
                                <li><a asp-area="" asp-controller="TipoManuntecaos" asp-action="Index">TipoManuntecaos</a></li>
                            </ul>
                        </div>
                        <div class="dropdown col-sm-4">
                            <span type="button" data-toggle="dropdown">
                                Registros
                            </span>
                            <ul class="dropdown-menu">
                                <li><a asp-area="" asp-controller="RegCondAmbs" asp-action="Index">RegCondAmbs</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3 nav navbar-nav pull-right">
                        <form class="navbar-form" role="search">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </nav>
            <div class="container body-content">
                @RenderBody()
                <hr />
                <div class="footer-container">
                    <footer></footer>
                </div>
            </div>

            <environment include="Development">
                <script src="~/lib/jquery/dist/jquery.js"></script>
                <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
                <script src="~/js/site.min.js" asp-append-version="true"></script>
            </environment>

            @RenderSection("Scripts", required: false)
        </div>
    </body>
</html>
