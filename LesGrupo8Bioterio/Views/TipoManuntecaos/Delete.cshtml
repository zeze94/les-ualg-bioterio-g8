@model LesGrupo8Bioterio.TipoManuntecao

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Página Inicial</a></li>
        <li class="breadcrumb-item"><a asp-controller="Projetoes" asp-action="Index">Projetos</a></li>
        <li class="breadcrumb-item"><a asp-controller="CircuitoTanques" asp-action="Index">Circuito de Tanques</a></li>
        <li class="breadcrumb-item"><a asp-controller="Tanques" asp-action="Index">Tanques</a></li>
        <li class="breadcrumb-item"><a asp-controller="RegManutencaos" asp-action="Index">Registo de Manutenção</a></li>
        <li class="breadcrumb-item"><a asp-controller="TipoManuntecaos" asp-action="Index">Tipos de Manutenção</a></li>
        <li class="breadcrumb-item active" aria-current="page">Eliminar</li>
    </ol>
</nav>

<h2>Eliminar</h2>

<h3 class="alert alert-danger">
    @if (Model.isDeletable)
    {
        <ul>
            <li> Tem a certeza que pretende Eliminar este Tipo de Manutenção?</li>
        </ul>
        <ul>
            <li id="kk" hidden="hidden">Impossivel eliminar este Tipo de Manutenção!</li>
        </ul>
    }
    else
    {
        <ul>
            <li> Este Tipo de Manutenção não pode ser apagado devido à existencia de Registos associados.</li>
        </ul>
        <ul>
            <li id="kk" hidden="hidden">Impossivel eliminar este Tipo de Manutenção!</li>
        </ul>
    }
</h3>

<div>
    <h4>Tipo de Manuntenção</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TManutencao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TManutencao)
        </dd>
    </dl>
    
    @if (Model.isDeletable) {
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdTManutencao" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <a type="button" class="btn btn-info pull-right" asp-action="Index">Cancelar</a>
    </form>
    }
</div>
