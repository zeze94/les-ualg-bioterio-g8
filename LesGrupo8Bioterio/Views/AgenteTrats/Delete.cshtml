@model LesGrupo8Bioterio.AgenteTrat

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<h3 class="alert alert-danger">
    Tem a certeza que pretende apagar este campo?
</h3>

<div>
    <h4>Agente de Tratamento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NomeAgenTra)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeAgenTra)
