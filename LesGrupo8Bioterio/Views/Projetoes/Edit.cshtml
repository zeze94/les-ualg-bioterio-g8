@model LesGrupo8Bioterio.Projeto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Editar</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProjeto" />
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Nome do Projeto" data-content="Nome do Projeto ou Referência FCT"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Data de Inicio" data-content="Data apartir da qual o Projeto se irá Inicializar"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="DataInicio" class="control-label"></label>
                <input type="date" asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Data de Fim" data-content="Data de término planeado para o Projeto"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="DataFim" class="control-label"></label>
                <input type="date" asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Autorização DGVA" data-content="Código da Autorização DGVA para o Projeto"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="AutorizacaoDgva" class="control-label"></label>
                <input asp-for="AutorizacaoDgva" class="form-control" required />
                <span asp-validation-for="AutorizacaoDgva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Referência ORBEA" data-content="Referência ORBEA do Projeto"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="RefOrbea" class="control-label"></label>
                <input asp-for="RefOrbea" class="form-control" required />
                <span asp-validation-for="RefOrbea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Instãncias Europeias" data-content="Submissão a Instâncias Europeias"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="SubmisInsEurop" class="control-label"></label>
                <select required class="form-control" type="text" id="SubmisInsEurop" name="SubmisInsEurop">
                    <option value="">Escolha uma opção</option>
                    <option value="True">Sim</option>
                    <option value="False">Não</option>
                </select>
                <span asp-validation-for="SubmisInsEurop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Animais autorizados" data-content="Número de animais autorizados para o Projeto"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="NroAnimaisAutoriz" class="control-label"></label>
                <input asp-for="NroAnimaisAutoriz" class="form-control" required />
                <span asp-validation-for="NroAnimaisAutoriz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a type="button" class="btn btn-primary" asp-action="Index">Retornar</a>
</div>
<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover();
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
