@model IEnumerable<LesGrupo8Bioterio.PlanoAlimentar>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Página Inicial</a></li>
        <li class="breadcrumb-item"><a asp-controller="Projetoes" asp-action="Index">Projetos</a></li>
        <li class="breadcrumb-item"><a asp-controller="CircuitoTanques" asp-action="Index">Circuito de Tanques</a></li>
        <li class="breadcrumb-item"><a asp-controller="Tanques" asp-action="Index">Tanques</a></li>
        <li class="breadcrumb-item"><a asp-controller="RegAlimentars" asp-action="Index">Registo Alimentar</a></li>
        <li class="breadcrumb-item active" aria-current="page">Plano Alimentar</li>
    </ol>
</nav>
<h2>Listagem de Planos Alimentares</h2>
<p>
    <a class="btn btn-info" asp-action="Create">Criar Plano Alimentar</a>
</p>
<div class="col-md-10">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MarcaAlim)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Temperatura)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Racao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RacaoDia)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MarcaAlim)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Temperatura)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Racao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RacaoDia)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdPlanAlim"><span class="glyphicon glyphicon-pencil"></span></a> |
                        <a asp-action="Details" asp-route-id="@item.IdPlanAlim"><span class="glyphicon glyphicon-eye-open"></span></a> |
                        <a asp-action="Delete" asp-route-id="@item.IdPlanAlim"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="col-md-12">
    <a type="button" class="btn btn-info pull-right" asp-controller="RegAlimentars" asp-action="Index">Voltar a Registo Alimentar</a>
</div>

