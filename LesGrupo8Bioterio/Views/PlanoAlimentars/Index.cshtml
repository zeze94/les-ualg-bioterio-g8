@model IEnumerable<LesGrupo8Bioterio.PlanoAlimentar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MarcaAlim)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Temperatura)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Racao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RacaoDia)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarcaAlim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temperatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Racao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RacaoDia)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPlanAlim">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPlanAlim">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPlanAlim">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
